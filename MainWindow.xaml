<Window x:Class="Text2TreeTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text2TreeTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
             <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" Click="MenuItem_Click_1">
                    <MenuItem Header="_New Attack Tree" />
                    <MenuItem Header="_Export Tree to" />
                    <MenuItem Header="_Print" />
                    <MenuItem Header="_Close Tree" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Zoom in"/>
                    <MenuItem Header="_Zoom out"/>
                    <MenuItem Header="_Fullscreen"/>
                </MenuItem>
                <MenuItem Header="_Actions" Click="MenuItem_Click">
                    <MenuItem Header="_Undo... Ctrl+Z"/>
                    <MenuItem Header="_Redo... Ctrl+Y"/>
                    <MenuItem Header="_Fullscreen"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Sample Trees"/>
                </MenuItem>
            </Menu>
        </DockPanel>
            <TextBox Grid.Row="1" AcceptsReturn="True"/>
            <TextBox Grid.Column="1" Grid.Row="1" AcceptsReturn="True"/>
            <TextBox Grid.Row="2" AcceptsReturn="True" Grid.ColumnSpan="2"/>


    
        </Grid>    

</Window>
